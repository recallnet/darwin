FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY pyproject.toml .
RUN pip install --no-cache-dir -e ".[api,ta,rl]"

# Copy application code
COPY darwin/ darwin/
COPY tools/ tools/

# Start Celery worker
CMD celery -A darwin.api.celery_app worker \
    --loglevel=info \
    --concurrency=2 \
    --max-tasks-per-child=10
